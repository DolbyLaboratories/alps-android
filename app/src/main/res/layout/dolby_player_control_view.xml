<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/exo_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/exo_styled_bottom_bar_margin_top"
        android:paddingHorizontal="@dimen/large_xl"
        android:paddingBottom="@dimen/normal_133">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_133"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@id/exo_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/exo_controls_time_placeholder"
                    style="@style/Dolby.TextAppearance.Time" />
                <androidx.media3.ui.DefaultTimeBar
                    android:id="@id/exo_progress"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/normal"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/normal_133"
                    app:bar_height="@dimen/small_50"
                    app:scrubber_disabled_size="@dimen/normal_67"
                    app:scrubber_enabled_size="@dimen/normal_67"
                    app:scrubber_dragged_size="@dimen/normal"
                    app:scrubber_drawable="@drawable/scrubber_selector"
                    app:buffered_color="@color/grey_lighter"
                    app:played_color="@color/pink"
                    app:unplayed_color="@color/grey_lighter" />
                <TextView
                    android:id="@id/exo_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/exo_controls_time_placeholder"
                    style="@style/Dolby.TextAppearance.Time" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton android:id="@id/exo_prev"
                        style="@style/ExoStyledControls.Button.Center.Previous"/>
                    <ImageButton android:id="@id/exo_play_pause"
                        android:layout_width="@dimen/player_control_size"
                        android:layout_height="@dimen/player_control_size"
                        style="@style/ExoStyledControls.Button.Center.PlayPause"
                        android:focusedByDefault="true" />
                    <ImageButton android:id="@id/exo_next"
                        style="@style/ExoStyledControls.Button.Center.Next"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/de_button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/player_control_size"
                        android:text="@string/de_button"
                        android:drawableStart="@drawable/ic_de"
                        android:paddingVertical="@dimen/normal_67"
                        android:paddingHorizontal="@dimen/player_control_radius"
                        android:drawablePadding="@dimen/small_50"
                        style="@style/Dolby.TextAppearance.Headline3.Bold"
                        android:background="@drawable/custom_control_bg_selector"
                        android:visibility="gone"
                        android:clickable="true">
                    </Button>
                    <Button
                        android:id="@+id/presentation_button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/player_control_size"
                        android:text="@string/presentation_button"
                        android:drawableStart="@drawable/ic_presentations"
                        android:paddingVertical="@dimen/normal_67"
                        android:paddingHorizontal="@dimen/player_control_radius"
                        android:drawablePadding="@dimen/small_50"
                        style="@style/Dolby.TextAppearance.Headline3.Bold"
                        android:background="@drawable/custom_control_bg_selector"
                        android:visibility="gone"
                        android:clickable="true">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
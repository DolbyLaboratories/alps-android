<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/settings_dialog_width"
    android:layout_height="match_parent"
    android:background="@color/black_70"
    android:orientation="vertical"
    android:padding="@dimen/normal_133">

    <LinearLayout
        android:id="@+id/debug_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/is_alps_enabled_checkbox"
            style="@style/Dolby.TextAppearance.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_control_bg_selector"
            android:button="@null"
            android:drawableStart="@drawable/checkbox_icon_selector"
            android:drawablePadding="@dimen/normal_67"
            android:padding="@dimen/normal"
            android:text="@string/enable_alps" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_version"
        style="@style/Dolby.TextAppearance.Body1.Hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Version 1.1.1" />
</LinearLayout>
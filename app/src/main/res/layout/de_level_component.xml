<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/de_levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/middle_guideline"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/de_level_4_image"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_de_level_4_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/de_level_3_image"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_de_level_3_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/de_level_2_image"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_de_level_2_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/de_level_1_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_de_level_1_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/de_x"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_de_x"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/middle_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/de_person"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_de_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/middle_guideline"
        app:layout_constraintStart_toStartOf="@id/middle_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
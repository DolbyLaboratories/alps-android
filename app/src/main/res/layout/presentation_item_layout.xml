<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/small_xs"
    android:padding="@dimen/normal_67"
    android:background="@drawable/category_bg_selector" >

    <ImageView
        android:id="@+id/selection_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small"
        android:src="@drawable/ic_selectable"
        android:focusable="false"
        android:clickable="false" />

    <TextView
        android:id="@+id/label"
        style="@style/Dolby.TextAppearance.Body1.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false" />

</LinearLayout>
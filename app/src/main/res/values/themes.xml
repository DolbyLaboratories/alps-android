<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DolbyALPS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Dolby.Widget.Button</item>
        <item name="buttonStyle">@style/Dolby.Widget.Button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/Dolby.Widget.TextView</item>

        <!--Dialogs-->
        <item name="bottomSheetStyle">@style/Dolby.Widget.BottomSheetDialogFragment</item>
        <item name="android:dialogTheme">@style/Dolby.Widget.Dialog</item>

        <!--Fullscreen-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
    </style>

    <style name="Dolby.Widget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Dolby.Widget.BottomSheetDialogFragment" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Dolby.Widget.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>